<h1>Listing users</h1>

<% @users.each do |user| %>
  <a href="<%= user_path user %>">
    <img src="<%= user.avatar_url %>">
    <%= user.name %>
  </a>
  @<%= user.username %>
  <p>
    <%= user.posts.size %> Posts <br>
    <%= user.followers.count %> Followers <br>
    <%= user.followeds.count %> Following <br>
  </p>
  <% if user.posts.first %>
    <p><%= user.posts.first.message %></p>
  <% end %>
<br>
<% end %>

<%= link_to 'New User', new_user_path %>
