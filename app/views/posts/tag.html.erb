<%= form_for @post do |form| %>
  <div id="tagBox">
    <%= image_tag @post.outfit.url(:profile), id: "tagImage" %>
    <%= form.fields_for :outfit_tags do |t| %>
      <%= render 'outfit_tag_fields', f: t %>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Tag", form, :outfit_tags %>
  <div class="field">
    <%= form.text_area :message %>
  </div>
  <div class="actions">
    <p><%= form.submit "Post" %></p>
  </div>
<% end %>

<% content_for(:footer) do %>
  <%= javascript_include_tag "jquery.annotate" %>
  <script type="text/javascript">
    $(function(){
      // function blackNote() {
      //   return $(document.createElement('span'))
      //     .text('TEST');
      // }

      // $('#tagBox').annotatableImage(blackNote);

      $('#tagImage').click(function(e) {
        var x = e.pageX - $(this).offset().left;
        var y = e.pageY - $(this).offset().top;
        $('.add_fields').trigger("click");
        // $('input[id$="content"]').each(function() {
        //   var content = $(this);

        //   if (!content.hasClass('tagInput')) {
        //     content.css('left', x);
        //     content.css('top', y);
        //     content.addClass('tagInput');
        //   }

        // });
        $('div[class="input-group"]').each(function() {
          var content = $(this);

          if (!content.hasClass('tagInput')) {
            content.css('left', x);
            content.css('top', y);
            content.addClass('tagInput');
          }

        });
        $('input[id$="x_loc"]').each(function() {
          var x_loc = $(this);

          if (x_loc.val().trim().length === 0) {
            x_loc.val(x);
          }
        });
        $('input[id$="y_loc"]').each(function() {
          var y_loc = $(this);

          if (y_loc.val().trim().length === 0) {
            y_loc.val(y);
          }
        });
      });


    });
  </script>
<% end %>
